<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.education.mapper.EduCourseMapper">
    
    <resultMap type="com.ruoyi.education.domain.EduCourse" id="EduCourseResult">
        <result property="courseId"     column="course_id"     />
        <result property="courseCode"   column="course_code"   />
        <result property="courseName"   column="course_name"   />
        <result property="deptId"       column="dept_id"       />
        <result property="deptName"     column="dept_name"     />
        <result property="credit"       column="credit"        />
        <result property="hours"        column="hours"         />
        <result property="courseType"   column="course_type"   />
        <result property="description"  column="description"   />
        <result property="status"       column="status"        />
        <result property="createBy"     column="create_by"     />
        <result property="createTime"   column="create_time"   />
        <result property="updateBy"     column="update_by"     />
        <result property="updateTime"   column="update_time"   />
        <result property="remark"       column="remark"        />
    </resultMap>

    <sql id="selectEduCourseVo">
        select c.course_id, c.course_code, c.course_name, c.dept_id, c.credit, c.hours, 
               c.course_type, c.description, c.status, c.create_by, c.create_time, 
               c.update_by, c.update_time, c.remark,
               d.dept_name
        from edu_course c
        left join sys_dept d on c.dept_id = d.dept_id
    </sql>

    <select id="selectEduCourseList" parameterType="com.ruoyi.education.domain.EduCourse" resultMap="EduCourseResult">
        <include refid="selectEduCourseVo"/>
        <where>  
            <if test="courseCode != null and courseCode != ''"> and c.course_code like concat('%', #{courseCode}, '%')</if>
            <if test="courseName != null and courseName != ''"> and c.course_name like concat('%', #{courseName}, '%')</if>
            <if test="deptId != null"> and c.dept_id = #{deptId}</if>
            <if test="courseType != null and courseType != ''"> and c.course_type = #{courseType}</if>
            <if test="status != null and status != ''"> and c.status = #{status}</if>
        </where>
        order by c.course_id desc
    </select>
    
    <select id="selectEduCourseByCourseId" parameterType="Long" resultMap="EduCourseResult">
        <include refid="selectEduCourseVo"/>
        where c.course_id = #{courseId}
    </select>

    <select id="selectEduCourseAll" resultMap="EduCourseResult">
        <include refid="selectEduCourseVo"/>
        where c.status = '0'
        order by c.course_code
    </select>

    <select id="checkCourseCodeUnique" parameterType="String" resultMap="EduCourseResult">
        select course_id, course_code from edu_course where course_code = #{courseCode} limit 1
    </select>
        
    <insert id="insertEduCourse" parameterType="com.ruoyi.education.domain.EduCourse" useGeneratedKeys="true" keyProperty="courseId">
        insert into edu_course
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="courseCode != null and courseCode != ''">course_code,</if>
            <if test="courseName != null and courseName != ''">course_name,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="credit != null">credit,</if>
            <if test="hours != null">hours,</if>
            <if test="courseType != null">course_type,</if>
            <if test="description != null">description,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="remark != null">remark,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="courseCode != null and courseCode != ''">#{courseCode},</if>
            <if test="courseName != null and courseName != ''">#{courseName},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="credit != null">#{credit},</if>
            <if test="hours != null">#{hours},</if>
            <if test="courseType != null">#{courseType},</if>
            <if test="description != null">#{description},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="remark != null">#{remark},</if>
            sysdate()
        </trim>
    </insert>

    <update id="updateEduCourse" parameterType="com.ruoyi.education.domain.EduCourse">
        update edu_course
        <trim prefix="SET" suffixOverrides=",">
            <if test="courseCode != null and courseCode != ''">course_code = #{courseCode},</if>
            <if test="courseName != null and courseName != ''">course_name = #{courseName},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="credit != null">credit = #{credit},</if>
            <if test="hours != null">hours = #{hours},</if>
            <if test="courseType != null">course_type = #{courseType},</if>
            <if test="description != null">description = #{description},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="remark != null">remark = #{remark},</if>
            update_time = sysdate()
        </trim>
        where course_id = #{courseId}
    </update>

    <delete id="deleteEduCourseByCourseId" parameterType="Long">
        delete from edu_course where course_id = #{courseId}
    </delete>

    <delete id="deleteEduCourseByCourseIds" parameterType="String">
        delete from edu_course where course_id in 
        <foreach item="courseId" collection="array" open="(" separator="," close=")">
            #{courseId}
        </foreach>
    </delete>
</mapper>
